<div class="podcast-explained unusable__block unusable__dark">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="unusable__highlight-text">Unusable explained</h2>
            </div>
        </div>
        <div class="row align-items-start">
            <div class="col-lg-5 d-none d-lg-block">
                <ul class="podcast-explained__nav">
                    <li class="active">
                        <a href="#what-is-usability">What is usability?</a>
                    </li>
                    <li>
                        <a href="#what-is-ux">What is UX?</a>
                    </li>
                    <li>
                        <a href="#why-should-i-care">Why should I care?</a>
                    </li>
                    <li>
                        <a href="#who-are-unusable-podcast">Who are you guys?</a>
                    </li>
                    <script>
                        // Get all the links above
                        let links = document.querySelectorAll('.podcast-explained__nav li a');

                        // Click / hover handler
                        let podcastExplainedHandler = function (event) {
                            // Strip "active" classes from every link & block
                            for (let x = 0; x < links.length; x++) {
                                let hideLink = links[x];
                                hideLink.parentElement.classList.remove('active');
                                let hideAnchor = hideLink.getAttribute('href');
                                document.querySelector(hideAnchor).classList.add('d-none', 'd-block', 'd-lg-none');
                            }

                            // Set active state on clicked link
                            this.parentElement.classList.add('active');

                            // Unhide related block
                            let anchor = this.getAttribute('href');
                            document.querySelector(anchor).classList.remove('d-none', 'd-block', 'd-lg-none');
                            event.preventDefault();
                        };

                        // Loop over links
                        for (let i = 0; i < links.length; i++) {
                            // Add click handler to the link
                            links[i].addEventListener('click', podcastExplainedHandler);
                        }
                    </script>
                </ul>
            </div>
