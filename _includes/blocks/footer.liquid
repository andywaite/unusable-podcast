<footer class="unusable__dark footer">
    {% include blocks/cta_bar.liquid %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img src="/images/logo-dark.svg" alt="" class="footer-logo" loading="lazy" width="166" height="49" />
            </div>
            <div class="col-md-4">
                <h3 class="unusable__highlight-text">Navigation</h3>
                <ul>
                    {% assign links = nav |  toarray %}
                    {% for link in links %}
                        <li>
                            <a href="{{ link.path }}">{{ link.label }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-4">
                <h3 class="unusable__highlight-text ">Social</h3>
                <ul>
                    {% assign socialmedia = socials |  toarray %}
                    {% for link in socialmedia %}
                    <li>
                        <a href="{{ link.url }}">{{ link.name }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="text-center">
                    <small>Copyright &copy; 2020 - 2021 Unusable Podcast | <a href="/accessibility-statement">Accessibility statement</a></small>
                </p>
            </div>
        </div>
    </div>
</footer>